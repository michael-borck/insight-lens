{
  "name": "insightlens",
  "version": "1.0.0",
  "description": "Unit survey analysis tool for lecturers",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -w -p src/main",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron . --no-sandbox",
    "build": "npm run build:main && npm run build:renderer && npm run build:electron",
    "build:main": "tsc -p src/main",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "start": "electron .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "survey",
    "analysis",
    "education"
  ],
  "author": "InsightLens Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.1",
    "better-sqlite3": "^9.2.2",
    "chart.js": "^4.4.1",
    "d3": "^7.8.5",
    "d3-cloud": "^1.2.7",
    "date-fns": "^3.0.6",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.303.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.2.133",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.21.1",
    "react-toastify": "^10.0.3",
    "recharts": "^2.10.3",
    "tailwindcss": "^3.4.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.insightlens.app",
    "productName": "InsightLens",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "mas": {
      "category": "public.app-category.education",
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "provisioningProfile": "build/embedded.provisionprofile"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "publisherName": "InsightLens Contributors"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Education",
      "maintainer": "InsightLens Contributors",
      "desktop": {
        "StartupNotify": "true",
        "Encoding": "UTF-8",
        "MimeType": "application/pdf"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "michael-borck",
      "repo": "insight-lens"
    }
  }
}
